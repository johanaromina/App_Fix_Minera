{
  "name": "tfg-mineria",
  "version": "1.0.0",
  "private": true,
  "description": "Sistema de gestión para minería - TFG",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "api:dev": "cd services/api && npm run dev",
    "web:dev": "cd apps/web && npm run dev",
    "mobile:dev": "cd apps/mobile && npx expo start",
    "dev": "concurrently \"npm run api:dev\" \"npm run web:dev\"",
    "install:all": "npm install && npm run install:apps && npm run install:services",
    "install:apps": "cd apps/web && npm install && cd ../mobile && npm install",
    "install:services": "cd services/api && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "overrides": {
    "ajv": "^8.12.0",
    "ajv-keywords": "^5.1.0",
    "schema-utils": "^4.2.0"
  },
  "dependencies": {
    "react-native-reanimated": "~3.10.1"
  }
}
